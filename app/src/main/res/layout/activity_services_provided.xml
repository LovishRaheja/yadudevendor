<?xml version="1.0" encoding="utf-8"?>



<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <com.gradledev.yadudevendor.helper.VerticalScrollview
        android:layout_width="fill_parent"
        android:fillViewport="true"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Activities.VehiclesServiced"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Vehicle Type"/>


            <ListView
                android:id="@+id/vehicleTypeListView"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:layout_margin="10dp"
                android:background="@android:color/darker_gray"

                android:divider="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Genral Services"/>


            <ListView
                android:id="@+id/generalServicesListView"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:layout_margin="10dp"
                android:background="@android:color/darker_gray"

                android:divider="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Bike Services"/>


            <ListView
                android:id="@+id/bikeServicesListView"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:layout_margin="10dp"
                android:background="@android:color/darker_gray"

                android:divider="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Car Services"/>


            <ListView
                android:id="@+id/carServicesListView"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:layout_margin="10dp"
                android:background="@android:color/darker_gray"

                android:divider="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Road Side Assistance (RSA)"/>


            <ListView
                android:id="@+id/rsaListView"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:layout_margin="10dp"
                android:background="@android:color/darker_gray"

                android:divider="@null"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:id="@+id/goToSeventh"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </com.gradledev.yadudevendor.helper.VerticalScrollview>
</LinearLayout>
